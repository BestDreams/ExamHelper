<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:background="#F6927B"
        android:text="使用帮助"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F6927B"
            android:textSize="15sp"
            android:text="1.继续练习为什么是空的？"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7F7F7F"
            android:text="继续练习顾名思义是继续上次的练习，点击“开始答题”按钮后，继续练习即可使用。"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F6927B"
        android:textSize="15sp"
        android:text="2.错题本怎么使用？"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7F7F7F"
        android:text="在练习模式和考试模式回答错误的题目会在退出时自动添加到错题本保存。用户在错题本中回答正确的题目在退出错题本时自动移除。或在错题本界面，点击“清空”手动清空错题本。"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#F6927B"
                android:textSize="15sp"
                android:text="3.收藏夹说明"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#7F7F7F"
                android:text="在练习模式和考试模式点击“收藏”图标，将当前题目添加到收藏夹保存。用户在收藏夹界面点击“移除”将当前题目从收藏夹移除，点击“清空”手动清空收藏夹。"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F6927B"
            android:textSize="15sp"
            android:text="4.练习模式怎么使用？"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7F7F7F"
            android:text="在练习模式界面，我的题库列表中，点击想要练习的科目右方的“开始答题”按钮，即可开始练习"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F6927B"
            android:textSize="15sp"
            android:text="5.考试模式怎么使用？"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#7F7F7F"
            android:text="考试模式题目范围1-50题（含1和50），用户点击“分配”按钮分配不同科目题目数量，点击“生成试卷”按钮，系统根据分配数量，随机抽题；用户答题完毕，点击“交卷”，系统完成评分后生成考试结果。"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/help_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6927B"
        android:textColor="#FFFFFF"
        android:text="我知道了"/>
</LinearLayout>